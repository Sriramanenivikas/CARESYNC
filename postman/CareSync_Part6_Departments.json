{
  "info": {
    "name": "CareSync API - Part 6: Departments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api"
    }
  ],
  "item": [
    {
      "name": "Departments",
      "item": [
        {
          "name": "Get All Departments",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});",
                  "pm.test('Is array',function(){pm.expect(pm.response.json().data).to.be.an('array');});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/departments"
          }
        },
        {
          "name": "Get Department By ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});",
                  "pm.test('Has dept data',function(){pm.expect(pm.response.json().data.id).to.be.a('number');pm.expect(pm.response.json().data.name).to.be.a('string');});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/departments/1"
          }
        },
        {
          "name": "Get Dept Not Found",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 404',function(){pm.response.to.have.status(404);});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/departments/99999"
          }
        },
        {
          "name": "Get Active Departments",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/departments/active"
          }
        },
        {
          "name": "Get Dept Count",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});",
                  "pm.test('Is number',function(){pm.expect(pm.response.json().data).to.be.a('number');});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/departments/count"
          }
        },
        {
          "name": "Create Department",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201',function(){pm.response.to.have.status(201);});",
                  "pm.collectionVariables.set('newDeptId',pm.response.json().data.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\":\"Test Department\",\"description\":\"Test department for API testing\",\"isActive\":true}"
            },
            "url": "{{baseUrl}}/departments"
          }
        },
        {
          "name": "Create Dept Invalid",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 400',function(){pm.response.to.have.status(400);});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\":\"\"}"
            },
            "url": "{{baseUrl}}/departments"
          }
        },
        {
          "name": "Update Department",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\":\"Updated Department\",\"description\":\"Updated description\",\"isActive\":true}"
            },
            "url": "{{baseUrl}}/departments/{{newDeptId}}"
          }
        },
        {
          "name": "Toggle Dept Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});"
                ]
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/departments/{{newDeptId}}/toggle-status"
          }
        },
        {
          "name": "Delete Department",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200',function(){pm.response.to.have.status(200);});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/departments/{{newDeptId}}"
          }
        }
      ]
    }
  ]
}
